<p id="notice"><%= notice %></p>
<body class="text-center smoothscroll enable-animation">

<h1 class="display-5 fw-bold text-center">Employees List</h1>
<br/>
<table class= "mx-auto table table-primary table-striped "style="width:50%">
  <thead>
    <tr>
      <th>Id</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.email %></td>
        <td><%= employee.title %></td>
        <td><%= link_to 'Show', employee,class:"btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee),class:"btn btn-primary" %></td>
        <td><%= link_to 'Delete', employee,class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Employee', new_employee_path, class:"btn btn-secondary" %>
