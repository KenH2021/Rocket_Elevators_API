<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content= "width=device-width, initial-scale=1.0">
    
</head>
<style>
    #map {
      height: 100%;
    }
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }
</style>
  
<body>
    <div id="map"></div>
    <script>
        function initMap(){
            // Map options
            var options = {
                zoom:8,
            }
            // New map
            var map = new google.maps.Map(document.getElementById('map'), options);
            addMarker({lat:42.4668,lng:-70.9495});

            function addMarker(coords) {
                var marker = new google.maps.Marker({
                    position:coords,
                    map:map,
                })
            };
        }
    </script>
    <script async="" 
        src="https://maps.googleapis.com/maps/api/js?key=gmapkey&callback=initMap">
    </script>

</body>
</html>